function renderPresenter(array $array, $level = 1, $sub = 0)
{
	foreach ($array as $key_val => $value) {
		$offset = '';
		if (is_array($value) && !isset($value['__link'])){
			echo '<tr>';
			echo '<td rowspan="' . count($value) . '">' . $key_val . '</td>';
			renderPresenter($value, $level + 1, 1);
		}
		else {
			if ($sub != 1){
				echo '<tr>';
			}
			echo '<td><a href="' . $value['__link'] . '">' . $key_val . '</a></td><td>' . formatRequiredArgs($value['__arguments']['required']) . '</td><td>' . formatOptionalArgs($value['__arguments']['optional']) . '</td>';
			echo '</tr>';
		}
	}
}

function formatRequiredArgs($arguments)
{
	$output = '';
	$left = count($arguments);
	foreach ($arguments as $arg => $value) {
		$output .= '<span>$' . $arg . '</span>';

		$output .= '</span>';
		if ($left != 1) {
			$output .= ',&nbsp;';
			$left--;
		}
	}
	return $output;
}

function formatOptionalArgs($arguments)
{
	$output = '';
	$left = count($arguments);
	foreach ($arguments as $arg => $value) {
		$output .= '<span>$' . $arg . '</span>&nbsp;=&nbsp;';
		$output .= '<span style="color: #408045; font-style: italic !important;">';

		if ($value === TRUE) {
			$output .= 'TRUE';
		} elseif ($value === FALSE) {
			$output .= 'FALSE';
		} elseif ($value === NULL) {
			$output .= 'NULL';
		} elseif (is_string($value)) {
			$output .= '\'' . $value . '\'';
		} else {
			$output .= print_r($value, TRUE);
		}

		$output .= '</span>';
		if ($left != 1) {
			$output .= ',&nbsp;';
			$left--;
		}
	}
	return $output;
}
